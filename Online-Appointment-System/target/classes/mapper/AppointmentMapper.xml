<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.appointment.dao.AppointmentMapper">

    <select id="getAllAppointments" resultType="Appointment">
        SELECT * FROM appointments
    </select>

    <insert id="addAppointment">
        INSERT INTO appointments (patient_name, appointment_date, doctor)
        VALUES (#{patientName}, #{appointmentDate}, #{doctor})
    </insert>

    <delete id="deleteAppointment">
        DELETE FROM appointments WHERE id = #{id}
    </delete>

</mapper>
